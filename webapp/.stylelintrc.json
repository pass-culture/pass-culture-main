{
  "extends": [
    "stylelint-config-standard",
    "stylelint-a11y/recommended"
  ],
  "plugins": [
    "stylelint-order",
    "stylelint-scss"
  ],
  "rules": {
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": [
        "each",
        "else",
        "extend",
        "if",
        "include",
        "mixin"
      ]
    }]
  }
}
