{
  "extends": [
    "stylelint-config-standard",
    "stylelint-a11y/recommended"
  ],
  "ignoreFiles": ["**/*.svg"],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": [
        "each",
        "else",
        "extend",
        "function",
        "if",
        "include",
        "mixin",
        "return",
        "use"
      ]
    }],
    "order/properties-alphabetical-order": true
  }
}
